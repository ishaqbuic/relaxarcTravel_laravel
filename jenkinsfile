pipeline{
    agent{label 'node1'}
    environment {
        DEBIAN_FRONTEND = 'noninteractive'
    }
    stages{
        stage('Build'){
            steps{
                script{    
                    sh 'pwd'
                    sh 'sudo add-apt-repository ppa:ondrej/php -y'
                    sh 'sudo apt-get update'
                    sh 'sudo apt-get install -y php8.2'
                    sh 'sudo apt-get install -y php8.2-xml'
                    sh 'php composer.phar'
                    sh 'apt-get install nodejs'
                    sh 'npm install'
                    sh 'php artisan key:generate'
                }
            }
        }
    }
}

