pipeline{
    agent{label 'node1'}
    environment {
        DEBIAN_FRONTEND = 'noninteractive'
    }
    stages{
        stage('Build'){
            steps{
                script{    
                    sh 'pwd'
                    sh 'sudo apt-get install php8.2-fpm -y'
                    sh 'php composer.phar install'
                    sh 'composer install'
                    sh 'mv .env.example .env'
                    sh 'apt-get install nodejs'
                    sh 'npm install'
                    sh 'php artisan key:generate'
                }
            }
        }
    }
}

