pipeline {
    agent{label 'node1'}
    stages {
        stage("Checkout"){
            steps{
                checkout scm
            }
        }
        stage("Build") {
            environment {
                ENV_FILE = credentials("exp.env")
            }
            steps {
                sh 'php --version'
                sh 'composer install'
                sh 'composer --version'
                sh 'cp ${ENV_FILE} .env'
                sh 'php artisan key:generate'
                sh 'php artisan migrate'
            }
        }
        stage("Unit test") {
            steps {
                sh 'php artisan test'
            }
        }
    }
}
