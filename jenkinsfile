pipeline{
    agent{label 'node1'}
    environment {
        DEBIAN_FRONTEND = 'noninteractive'
    }
    stages{
        stage('Build'){
            steps{
                script{    
                    sh 'pwd'
                    sh 'sudo add-apt-repository ppa:ondrej/php -y'
                    sh 'sudo apt-get update'
                    sh 'sudo apt-get install -y php8.2'
                    sh 'sudo apt-get install -y php8.2-xml'
                    sh 'sudo php composer.phar install --ignore-platform-req=ext-curl'
                    sh 'sudo composer install'
                    sh 'sudo mv .env.example .env'
                    sh 'sudo apt-get install nodejs'
                    sh 'sudo npm install'
                    sh 'php artisan key:generate'
                }
            }
        }
    }
}

